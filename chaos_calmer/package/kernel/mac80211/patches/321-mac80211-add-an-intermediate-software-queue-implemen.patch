+	skb_queue_head_init(&txq->queue);
+	txq->txq.vif = &sdata->vif;
+
+	if (sta) {
+		txq->txq.sta = &sta->sta;
+		sta->sta.txq[tid] = &txq->txq;
+		txq->txq.ac = ieee802_1d_to_ac[tid & 7];
+	} else {
+		sdata->vif.txq = &txq->txq;
+		txq->txq.ac = IEEE80211_AC_BE;
+	}
