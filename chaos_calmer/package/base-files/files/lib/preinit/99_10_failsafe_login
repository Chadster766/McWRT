failsafe_netlogin () {
	telnetd -l /bin/login.sh <> /dev/null 2>&1
}

failsafe_shell() {
	lock /tmp/.failsafe
	ash --login
	echo "Please reboot system when done with failsafe network logins"
}

boot_hook_add failsafe failsafe_netlogin
boot_hook_add failsafe failsafe_shell
