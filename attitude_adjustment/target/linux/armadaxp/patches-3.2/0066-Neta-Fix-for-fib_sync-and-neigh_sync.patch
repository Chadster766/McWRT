+		if (tbl->family != family)
+			continue;
+		nht = rcu_dereference_bh(tbl->nht);
+
+		for (h = 0; h <= nht->hash_mask; h++) {
+			for (n = rcu_dereference_bh(nht->hash_buckets[h]); n != NULL;
+				 n = rcu_dereference_bh(n->next)) {
+					 if (n->dev == NULL)
