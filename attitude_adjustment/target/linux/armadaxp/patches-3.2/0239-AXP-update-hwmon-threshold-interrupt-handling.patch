@@ -120,7 +120,7 @@
 #define IRQ_AURORA_PCIE8	99
 #define IRQ_AURORA_PCIE9	103
 
-#define IRQ_AURORA_OVRHT	107
+#define IRQ_AURORA_PMU		107
 
 #define IRQ_AURORA_DRAM		108
 
