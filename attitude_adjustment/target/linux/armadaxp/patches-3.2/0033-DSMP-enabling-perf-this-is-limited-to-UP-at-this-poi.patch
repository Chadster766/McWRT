 	mrvl_pj4b_write_pmnc(pmnc);	
@@ -588,8 +589,8 @@ static const struct arm_pmu mrvl_pj4b_pmu = {
 	.read_counter	= mrvl_pj4b_pmu_read_counter, /*v*/
 	.write_counter	= mrvl_pj4b_pmu_write_counter, /*v*/
