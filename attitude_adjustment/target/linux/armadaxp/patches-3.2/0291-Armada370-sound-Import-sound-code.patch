+#if defined(CONFIG_ARM) && !defined(CONFIG_AURORA_IO_CACHE_COHERENCY)
 #define ARCH_HAS_DMA_MMAP_COHERENT
 #endif
 #endif
--- a/sound/soc/Kconfig
+++ b/sound/soc/Kconfig
@@ -61,6 +61,16 @@ source "sound/soc/sh/Kconfig"
 source "sound/soc/tegra/Kconfig"
