+ENTRY(cpu_pj4bv7_proc_init)
+	mov	pc, lr
+ENDPROC(cpu_pj4bv7_proc_init)
+
+ENTRY(cpu_pj4bv7_proc_fin)
+	mrc	p15, 0, r0, c1, c0, 0		@ ctrl register
+	bic	r0, r0, #0x1000			@ ...i............
+	bic	r0, r0, #0x0006			@ .............ca.
+	mcr	p15, 0, r0, c1, c0, 0		@ disable caches
+	mov	pc, lr
+ENDPROC(cpu_pj4bv7_proc_fin)
